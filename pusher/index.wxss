@import '../../utilities/live.wxss';

.pusher {
  width: 100vw;
  height: 100vh;
  display: block;
}

/* 推流控制 */
.push-control {
  position: fixed;
  top: 140rpx;
  right: 0;
}
.push-control .control-item {
  width: 180rpx;
  padding-bottom: 20px;
  text-align: center;
}
.push-control .control-item-icon {
  margin: 0 auto;
  width: 56rpx;
  height: 56rpx;
}
.push-control .control-item-icon .control-icon {
  width: 56rpx;
  height: 56rpx;
}
.push-control .control-item-title {
  color: #FFF;
  font-size: 26rpx;
  line-height: 46rpx;
}
/* 推流失败 */
.push-error-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;

  align-items: center;
  justify-content: center;
}
.push-error {
  padding: 20rpx 40rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 6rpx;
  background-color: rgba(0,0,0,.8);
}
.push-error-text {
  display: block;
  color: #FFF;
  font-size: 28rpx;
}